<Window x:Class="Apontamentos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:vm="clr-namespace:Apontamentos" Title="MainWindow" Height="350" Width="525" Closing="Window_Closing">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <Grid Name="_teste">
        <DataGrid AutoGenerateColumns="True" Margin="8,111,9,12" Name="dataGrid1" ItemsSource="{Binding Demandas}" SelectedCellsChanged="dataGrid1_SelectedCellsChanged" CanUserDeleteRows="False" />
        <Button IsEnabled="False" Content="Play" Height="23" HorizontalAlignment="Left" Margin="8,82,0,0" Name="PlayPauseButton" VerticalAlignment="Top" Width="75" Click="PlayPauseButton_Click" Command="{Binding PlayPauseButtonPressed}"/>
        <Button IsEnabled="False" Content="Stop" Height="23" HorizontalAlignment="Left" Margin="88,82,0,0" Name="StopButton" VerticalAlignment="Top" Width="75" Click="StopButton_Click"  Command="{Binding StopButtonPressed}"/>
        <TextBlock Height="70" Margin="8,7,9,0" Name="Cronometro" Text="{Binding Path=Cronometro}" VerticalAlignment="Top" TextAlignment="Center" FontSize="50" Background="Black" Foreground="White"/>
    </Grid>
</Window>
